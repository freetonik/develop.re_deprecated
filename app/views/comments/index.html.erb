<% @comments.each do |comment| %>
  <ol class="comments comments1">
    <%= render :partial => "comments/comment", :locals => { :story =>
      comment.story, :comment => comment,
      :show_story => true } %>
  </ol>
<% end %>

<div class="morelink">
  <% if @page && @page > 1 %>
    <a href="/comments<%= @page == 2 ? "" : "/page/#{@page - 1}" %>">&larr;
      Страница <%= @page - 1 %></a>
  <% end %>

  <% if @comments.any? %>
    <% if @page && @page > 1 %>
      |
    <% end %>

    <a href="/comments/page/<%= @page + 1 %>">Страница
      <%= @page + 1 %> &rarr;</a>
  <% end %>
</div>
